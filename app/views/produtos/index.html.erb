<h1>Produtos</h1>

<table>
    <tr>
        <th>ID</th>
        <th>NOME</th>
        <th>DESCRICAO</th>
    </tr>
    <% @produtos.each do |produto| %>
    <tr>
        <td><%= produto.id %></td>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td> 
        <td><a href="/produtos/<%= produto.id %>/alterar">Alterar</td> 
        <td><a href="/produtos/<%= produto.id %>/excluir">Excluir</td> 
    </tr>
    <% end %>
</table>

  
